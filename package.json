{
  "name": "file-nesting-explorer",
  "displayName": "File nesting explorer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-nesting-explorer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "fileNestingExplorer.newFile",
        "title": "New File...",
        "icon": "$(new-file)"
      },
      {
        "command": "fileNestingExplorer.newFolder",
        "title": "New Folder...",
        "icon": "$(new-folder)"
      },
      {
        "command": "fileNestingExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "fileNestingExplorer.cut",
        "title": "Cut"
      },
      {
        "command": "fileNestingExplorer.copy",
        "title": "Copy"
      },
      {
        "command": "fileNestingExplorer.copyPath",
        "title": "Copy path"
      },
      {
        "command": "fileNestingExplorer.copyRelativePath",
        "title": "Copy relative path"
      },
      {
        "command": "fileNestingExplorer.rename",
        "title": "Rename"
      },
      {
        "command": "fileNestingExplorer.delete",
        "title": "Delete"
      },
      {
        "command": "fileNestingExplorer.openEditor",
        "title": "Open Editor"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "fileNestingExplorer",
          "name": "File Nesting Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fileNestingExplorer.newFile",
          "when": "view == fileNestingExplorer",
          "group": "navigation@1"
        },
        {
          "command": "fileNestingExplorer.newFolder",
          "when": "view == fileNestingExplorer",
          "group": "navigation@1"
        },
        {
          "command": "fileNestingExplorer.refresh",
          "when": "view == fileNestingExplorer",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "fileNestingExplorer.newFile",
          "when": "view == fileNestingExplorer && viewItem == folder",
          "group": "group1"
        },
        {
          "command": "fileNestingExplorer.newFolder",
          "when": "view == fileNestingExplorer && viewItem == folder",
          "group": "group1"
        },
        {
          "command": "fileNestingExplorer.cut",
          "when": "view == fileNestingExplorer",
          "group": "group2"
        },
        {
          "command": "fileNestingExplorer.copy",
          "when": "view == fileNestingExplorer",
          "group": "group2"
        },
        {
          "command": "fileNestingExplorer.copyPath",
          "when": "view == fileNestingExplorer",
          "group": "group3"
        },
        {
          "command": "fileNestingExplorer.copyRelativePath",
          "when": "view == fileNestingExplorer",
          "group": "group3"
        },
        {
          "command": "fileNestingExplorer.rename",
          "when": "view == fileNestingExplorer"
        },
        {
          "command": "fileNestingExplorer.delete",
          "when": "view == fileNestingExplorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
